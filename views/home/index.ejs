<%- include('../parts/header.ejs') %>
<body>

<!-- Wrapper Start -->
<div class="wrapper">
    <!-- Navbar -->
    <%- include('../parts/navbar.ejs') %>

    <!-- Sidebar Start -->
    <%- include('../parts/sidebar.ejs') %>

    <!-- Main Container Start -->
    <main class="main--container">
        <!-- Page Header Start -->
        <section class="page--header">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6">
                        <!-- Page Title Start -->
                        <h2 class="page--title h5">Home</h2>
                        <!-- Page Title End -->

                        <ul class="breadcrumb">
                            <li class="breadcrumb-item active"><a href="/">Home</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <!-- Page Header End -->

        <!-- Main Content Start -->
        <section class="main--content">
            <div class="row gutter-20">
                <div class="col-md-4">
                    <div class="panel">
                        <div class="miniStats--panel">
                            <div class="miniStats--header bg-darker">
                            </div>

                            <div class="miniStats--body">
                                <i class="miniStats--icon fa fa-money-bill-alt text-blue"></i>

                                <p class="miniStats--caption text-blue">Total</p>
                                <h3 class="miniStats--title h4">Pendapatan</h3>
                                <p class="miniStats--num text-blue">
                                    Rp <%- new Intl.NumberFormat('de-DE').format(balance); %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="panel">
                        <div class="miniStats--panel">
                            <div class="miniStats--header bg-darker">
                            </div>

                            <div class="miniStats--body">
                                <i class="miniStats--icon fa fa-users text-orange"></i>

                                <p class="miniStats--caption text-orange">Total</p>
                                <h3 class="miniStats--title h4">Tim Aktif</h3>
                                <p class="miniStats--num text-orange"><%- active; %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="panel">
                        <div class="miniStats--panel">
                            <div class="miniStats--header bg-darker">
                            </div>

                            <div class="miniStats--body">
                                <i class="miniStats--icon fa fa-users text-green"></i>
                                <p class="miniStats--caption text-green">Total</p>
                                <h3 class="miniStats--title h4">Semua Tim</h3>
                                <p class="miniStats--num text-green"><%- count; %></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-12">
                    <div class="panel">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                TIM TERBARU
                            </h3>
                        </div>

                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table style--2">
                                    <thead>
                                    <tr>
                                        <th>Nama Tim</th>
                                        <th>Email</th>
                                        <th>No Telepon</th>
                                        <th>Kategori</th>
                                        <th>Ide Tim</th>
                                        <th>Status Pembayaran</th>
                                        <th>Status</th>
                                        <th>Detail</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% team.map((item) => { %>
                                        <!-- Table Row Start -->
                                        <tr>
                                            <td><%- item.name; %></td>
                                            <td><%- item.email; %></td>
                                            <td><%- item.phone; %></td>
                                            <td><%- item.category; %></td>
                                            <td><%- item.idea.title; %></td>
                                            <td>
                                                <span class="label label-<%- item.payment.status ? 'success' : 'danger'; %>"><%- item.payment.status ? 'PAID' : 'UNPAID'; %></span>
                                            </td>
                                            <td>
                                                <span class="label label-<%- item.status ? 'success' : 'danger'; %>"><%- item.status ? 'Aktif' : 'Non-Aktif'; %></span>
                                            </td>
                                            <td><a href='/team/<%- item._id; %>'><i class='fa fa-edit'></i></a></td>
                                        </tr>
                                        <!-- Table Row End -->
                                    <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Main Content End -->

        <%- include('../parts/main-footer.ejs') %>
    </main>
    <!-- Main Container End -->
</div>
<!-- Wrapper End -->

<!-- Scripts -->
<%- include('../parts/scripts') %>
